{% extends 'base.html.twig' %}

{% block title %}Личная библиотека | Книга{% endblock %}

{% block body %}

<div style="display: flex; flex-wrap: wrap;">
    <div style="padding: 10px; margin: 10px; width: 23%;">
        <img src="{{ asset('uploads/photos/' ~ book.cover) }}" style="max-width: 400px" />
        <h3>{{ book.title }}</h3>
        <p>Автор: {{ book.author }}</p>
        <p>Дата прочтения: {{ book.readAt }}</p>
        {% if book.uploadable %}
            <a href="#" style="margin-right: 10px;">Скачать</a>
        {% endif %}
        {% if app.user %}
            <a href="{{ path('app_book_edit', { id: book.id }) }}" style="margin-right: 10px;">Редактировать</a>
            <a href="{{ path('app_book_delete', { id: book.id }) }}" style="color: red;">Удалить</a>
        {% endif %}
    </div>
</div>


{% endblock %}
